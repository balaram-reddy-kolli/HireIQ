# Production Environment Template for EC2 Deployment
# Copy this file to .env and update with your actual values

# Django Settings
SECRET_KEY=your-super-secret-key-change-this-in-production
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,YOUR_EC2_PUBLIC_IP_HERE

# Database Configuration - MongoDB Atlas
MONGODB_NAME=hireiq_db
MONGODB_URL=mongodb+srv://YOUR_USERNAME:YOUR_PASSWORD@YOUR_CLUSTER.mongodb.net/hireiq_db?retryWrites=true&w=majority

# Local MongoDB (for docker-compose) - These will be used by docker containers
MONGO_USERNAME=admin
MONGO_PASSWORD=secure_mongo_password_change_this
MONGO_DATABASE=hireiq_db

# Redis Configuration (for docker-compose)
REDIS_PASSWORD=secure_redis_password_change_this

# Google OAuth Settings
GOOGLE_OAUTH2_KEY=your-google-oauth-client-id
GOOGLE_OAUTH2_SECRET=your-google-oauth-client-secret
GOOGLE_CLIENT_ID=your-google-oauth-client-id

# Email Settings
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-gmail-app-password

# AI API Keys
GROQ_API_KEY=your-groq-api-key-here
PERPLEXITY_API_KEY=your-perplexity-api-key-here
GEMINI_API_KEY=your-gemini-api-key-here

# Frontend Configuration - UPDATE WITH YOUR ACTUAL EC2 IP
FRONTEND_API_URL=http://YOUR_EC2_PUBLIC_IP_HERE:8000/api

# Security Settings
SECURE_SSL_REDIRECT=False
SECURE_PROXY_SSL_HEADER=HTTP_X_FORWARDED_PROTO,https

# CORS Settings
CORS_ALLOW_ALL_ORIGINS=True
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://YOUR_EC2_PUBLIC_IP_HERE

# Django Settings Module
DJANGO_SETTINGS_MODULE=hireiq_backend.settings_production